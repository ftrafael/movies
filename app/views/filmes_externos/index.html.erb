<img src="assets/marvel.jpg" class="img-fluid" alt="marvel">

<div class="container">
  <div class="row align-items-start">
    <% @filme_externo.each do |filme| %>

      <div class="col">
        <div class="card p-2 m-3" style="width: 18rem;">
          <div class="flip">
            <div class="front">
              <img src=<%= @poster+filme.poster_path %> class="card-img-top" alt="Poster do filme">
            </div>
            <div class="card-body">
              <div class="back">
                <h3 class="card-text"><%= filme.title %></h3>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                  Descrição
                </button>
              </div>      
            </div>
          </div>
        </div>
      </div>
<!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>